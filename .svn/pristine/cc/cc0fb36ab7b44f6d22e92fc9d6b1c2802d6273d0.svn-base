<?xml version="1.0" encoding="utf-8"?><!-- 忘记密码界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical">

    <!-- 头部导航 -->

    <include
        android:id="@+id/include"
        layout="@layout/top_layout_higher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/enter_account" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gh_shenhui_color"
                android:textColorHint="@color/gh_qianhui_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/tv_isRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/shouye_67"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_code" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入收到的验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="15dip"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gh_shenhui_color"
                    android:textColorHint="@color/gh_qianhui_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/gh_linecolor1_to_white_selector"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/enter_password" />

            <EditText
                android:id="@+id/et_userpwd"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/pwd_character_types"
                android:hint="请输入登录密码"
                android:paddingLeft="10dip"
                android:password="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gh_shenhui_color"
                android:textColorHint="@color/gh_qianhui_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/shouye_67"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>