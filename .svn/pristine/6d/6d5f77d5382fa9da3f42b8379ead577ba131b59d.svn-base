                <LinearLayout
                    android:id="@+id/mLinear_select1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_50DP"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/recharge_account" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:descendantFocusability="beforeDescendants"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="账号"
                        android:textColor="@color/gh_shenhui_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ed_Num1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="center_vertical|left"
                        android:hint="选择充值账号"
                        android:imeOptions="actionNext"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@color/gh_shenhui_color"
                        android:textColorHint="@color/gh_qianhui_color"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择账号"
                            android:textColor="@color/gh_qianhui_color"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/shouye_07" />
                    </LinearLayout>


                </LinearLayout>

                <View
