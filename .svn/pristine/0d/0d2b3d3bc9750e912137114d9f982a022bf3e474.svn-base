        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/DIMEN_30DP"
            android:background="@drawable/citytopsearch_shape1"
            android:paddingLeft="6dp"
            android:singleLine="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/home_search" />

            <EditText
                android:id="@+id/ed_search"
                android:layout_width="@dimen/DIMEN_200DP"
                android:layout_height="match_parent"
                android:paddingLeft="6dp"
                android:hint="搜索"
                android:maxLength="10"
                android:background="@color/white"
                android:textColor="@color/gh_qianhui_color"
                android:textColorHint="@color/gh_qianhui_color"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:singleLine="true"
            android:text="搜索"
            android:layout_marginTop="@dimen/DIMEN_37DP"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:layout_marginRight="@dimen/DIMEN_20DP"
            android:textColor="@color/gh_white_to_linecolor1_selector" />
