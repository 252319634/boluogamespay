<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/gh_qianhui_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.game.helper.view.widget.XCRoundImageViewByXfermode
                    android:id="@+id/iv_icon"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/preview_card_pic_loading" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="全民突击"
                        android:textColor="@color/gh_shenhui_color"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/DIMEN_5DP"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="充值日期："
                            android:textColor="@color/gh_qianhui_color"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="xxxx-xx-xx xx:xx"
                            android:textColor="@color/gh_qianhui_color"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/DIMEN_5DP"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号："
                            android:textColor="@color/gh_qianhui_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_orderid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/gh_qianhui_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <!-- <TextView
                         android:id="@+id/tv_num3"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:text="订单类型：￥25"
                         android:textColor="@color/gh_shenhui_color"
                         android:textSize="12sp" />

                     <TextView
                         android:id="@+id/tv_num1"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:text="充值金额：￥50"
                         android:textColor="@color/gh_shenhui_color"
                         android:textSize="12sp" />

                     <TextView
                         android:id="@+id/tv_num2"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:text="实际支付：￥25"
                         android:textColor="@color/gh_shenhui_color"
                         android:textSize="12sp" />
 -->

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/DIMEN_15DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:gravity="center"
            android:singleLine="true"
            android:text="受理中"
            android:textColor="@color/light_blue"
            android:textSize="14sp"/>
<!--

            <TextView
                android:id="@+id/tv_num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="支付方式：￥25"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="12sp" />

-->

    </LinearLayout>

</LinearLayout>