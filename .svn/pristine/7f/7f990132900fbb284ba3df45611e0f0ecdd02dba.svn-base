<?xml version="1.0" encoding="utf-8"?>
<!-- 编辑资料 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical" >

    <!-- 头部导航 -->

    <include
        android:id="@+id/include"
        layout="@layout/top_layout_higher" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/relat_name"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/DIMEN_50DP"
                    android:background="@drawable/public_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="昵称"
                        android:textColor="@color/gh_shenhui_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="34dp"
                        android:gravity="center"
                        android:text=""
                        android:maxLength="8"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/gh_qianhui_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/shouye_07" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_0.5DP"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/DIMEN_50DP" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="性别"
                        android:textColor="@color/gh_shenhui_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/relat_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/wode_83" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_0.5DP"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/relat_instruction"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/DIMEN_50DP"
                    android:background="@drawable/public_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="个人签名"
                        android:textColor="@color/gh_shenhui_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="34dp"
                        android:gravity="center"
                        android:text=""
                        android:maxLength="5"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/gh_qianhui_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/shouye_07" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_0.5DP"
                    android:background="@color/line" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relat_set_pic"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/DIMEN_50DP"
                android:background="@drawable/public_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="照片墙"
                    android:textColor="@color/gh_shenhui_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_picNum"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:text="0个"
                    android:textColor="@color/gh_qianhui_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/shouye_07" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relat_set_phone"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/DIMEN_10DP"
                android:layout_height="@dimen/DIMEN_50DP"
                android:background="@drawable/public_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="绑定手机号"
                    android:textColor="@color/gh_shenhui_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/gh_qianhui_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/shouye_07" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_0.5DP"
                android:background="@color/line" />


            <RelativeLayout
                android:id="@+id/relat_set_address"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/DIMEN_50DP"
                android:background="@drawable/public_selector" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="收货地址"
                    android:textColor="@color/gh_shenhui_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_addressNum"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="34dp"
                    android:gravity="center"
                    android:text="0个"
                    android:textColor="@color/gh_qianhui_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/shouye_07" />
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>