<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.game.helper.view.widget.XCRoundImageViewByXfermode
            android:id="@+id/icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/preview_card_pic_loading" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="新游戏上线啦！《幻城》网游即日上线，不容错过哈！"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:text="有效期：2016-08-08 至 2017-08-08"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="卡号：5404801520654141"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_Copy"
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gh_line1_line_shape_5"
            android:gravity="center"
            android:text="复制"
            android:textColor="@color/light_blue"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gh_qianhui_color" />

</LinearLayout>