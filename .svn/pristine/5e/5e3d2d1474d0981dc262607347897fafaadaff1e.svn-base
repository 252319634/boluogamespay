<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 头部导航 -->

    <include
        android:id="@+id/include"
        layout="@layout/top_layout_higher" />

    <RelativeLayout
        android:id="@+id/relat_hot_community"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/gh_white_to_bgcolor_selector" >

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/_shiqu_91" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_1"
            android:gravity="center"
            android:text="热门公会推荐"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/gh_line1_line_shape_5"
            android:gravity="center"
            android:text="查看"
            android:textColor="@color/light_blue"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gh_qianhui_color" />

    <ListView
        android:id="@+id/lv_hot_community"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:cacheColorHint="#ffffffff"
        android:divider="@null"
        android:gravity="center"
        android:scrollbars="none" >
    </ListView>

    <LinearLayout
        android:id="@+id/mLAdd"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/light_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/_shiqu_17" />

        <TextView
            android:id="@+id/tv_gets"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="创建公会"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>