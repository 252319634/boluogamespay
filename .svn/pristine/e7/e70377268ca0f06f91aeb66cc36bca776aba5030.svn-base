<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@drawable/gh_white_to_bgcolor_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.game.helper.view.widget.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_item"
            android:layout_width="38.0dip"
            android:layout_height="38.0dip"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pic_moren" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="王者巅峰"
                android:textColor="@color/light_blue"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2016-08-24 17:16"
                android:textColor="@color/gh_qianhui_color"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@drawable/_shiqu_31" />

            <TextView
                android:id="@+id/tv_giftnum"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="x1000"
                android:textColor="@color/gh_qianhui_color"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/tv_giftprice"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="131400"
                android:textColor="@color/light_blue"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line" />

</LinearLayout>