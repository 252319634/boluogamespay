<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical">

    <!-- 头部导航 -->

    <include
        android:id="@+id/include"
        layout="@layout/top_layout_higher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_50DP"
        android:background="@color/white"
        android:layout_marginTop="@dimen/DIMEN_10DP"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号:"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/selectgame_account_et"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="输入充值账号"
            android:imeOptions="actionNext"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/gh_shenhui_color"
            android:textColorHint="@color/gh_qianhui_color"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/selectgame_sure_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/DIMEN_40DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:text="确定"
            android:background="@color/light_blue"
            android:gravity="center"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0.5DP"
        android:background="@color/line" />

    <ListView
        android:layout_marginTop="@dimen/DIMEN_10DP"
        android:id="@+id/lv_selectGameNo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="#ffffffff"
        android:divider="@null"
        android:gravity="center"
        android:scrollbars="none"></ListView>

</LinearLayout>