<com.example.mylistview.pullListView.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pullToRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/refresh_head" />

    <com.example.mylistview.pullListView.PullableListView
        android:id="@+id/MyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="@color/white"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:gravity="center"
        android:scrollbars="none" />

</com.example.mylistview.pullListView.PullToRefreshLayout>