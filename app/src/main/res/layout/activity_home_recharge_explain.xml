<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical" >

    <!-- 头部导航 -->

    <include
        android:id="@+id/include"
        layout="@layout/top_layout_higher" />

    <RelativeLayout
        android:id="@+id/relat_set_new_number"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="新账号首充说明"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/shouye_07" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0.5DP"
        android:background="@color/line"
        />

    <RelativeLayout
        android:id="@+id/relat_set_discount"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/public_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="折扣号续充说明"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/shouye_07" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0.5DP"
        android:background="@color/line"
        />

    <RelativeLayout
        android:id="@+id/relat_set_platform_currency"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/public_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="金币充值说明"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/shouye_07" />
    </RelativeLayout>


</LinearLayout>