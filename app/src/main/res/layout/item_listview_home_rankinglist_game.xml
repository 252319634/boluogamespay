<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="85dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_80DP"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mLinearClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/DIMEN_40DP"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rankinglist_stace_iv"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                     />

                <TextView
                    android:id="@+id/tvNumNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/gh_qianhui_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/timg_second_game"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp">

                    <com.game.helper.view.widget.XCRoundImageViewByXfermode
                        android:id="@+id/game_second_icon"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/preview_card_pic_loading"
                        android:scaleType="fitXY"
                        android:src="@drawable/preview_card_pic_loading" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/mLinear_dz"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/dzs"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_dz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5折"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/gh_shenhui_color"
                        android:textSize="16.0sp"/>

                    <TextView
                        android:id="@+id/tv_first"
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/gh_line1_line_shape_5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="首充"
                        android:textColor="@color/light_blue"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_gift"
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/gh_line1_line_shape_5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="礼包"
                        android:textColor="@color/light_blue"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_first3"
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gh_line1_line_shape_5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="首充"
                        android:textColor="@color/light_blue"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/item_mLinearMsg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="0.0dip"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="类型"
                                android:textColor="@color/gh_qianhui_color"
                                android:textSize="14.0sp" />
                            <View
                                android:layout_width="@dimen/DIMEN_1DP"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/DIMEN_4DP"
                                android:layout_marginBottom="@dimen/DIMEN_4DP"
                                android:layout_marginLeft="@dimen/DIMEN_5DP"
                                android:background="@color/gh_qianhui_color"/>

                            <TextView
                                android:id="@+id/tv_datasize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="25.2M"
                                android:textColor="@color/gh_qianhui_color"
                                android:textSize="14.0sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_msg"
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="0.0dip"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="一句话简介，一句话简介。"
                            android:textColor="@color/gh_qianhui_color"
                            android:textSize="14.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mLinear_progress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ProgressBar
                            android:id="@+id/pb_update_progress"
                            style="@style/ProgressBar_Mini"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0.0dip"
                            android:layout_weight="1"
                            android:max="100"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:progress="0" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="0.0dip"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/down_txt_pb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/gh_qianhui_color"
                                android:textSize="12.0sp" />

                            <TextView
                                android:id="@+id/down_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="0dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="0%"
                                android:textColor="@color/gh_qianhui_color"
                                android:textSize="12.0sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/tv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/gh_line1_bg_shape_5"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>