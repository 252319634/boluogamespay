<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

           <RelativeLayout
                android:id="@+id/mRelative_RankingList2"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/re_second"
                        android:layout_width="0dp"
                        android:visibility="invisible"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="130dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shouye_290" >

                            <LinearLayout
                                android:id="@+id/mLinear_second"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="40dp"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tv_title_second"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="欢乐斗地主"
                                    android:textColor="@color/gh_shenhui_color"
                                    android:textSize="16.0sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/shouye_111" />

                                <TextView
                                    android:id="@+id/tv_type_second"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="3246"
                                    android:textColor="@color/gh_yellow_color"
                                    android:textSize="16.0sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="37dp" >

                            <RelativeLayout
                                android:id="@+id/timg_second"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/shouye_1560" >

                                <com.game.helper.view.widget.CircleImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/imageView_pic_second"
                                    android:layout_width="46dp"
                                    android:layout_height="46dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/pic_moren"
                                    app:civ_border_color="@color/white"
                                    app:civ_border_width="2dp" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/shouye_75" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:id="@+id/re_first"
                        android:visibility="invisible"
                        android:layout_height="fill_parent"
                        android:descendantFocusability="beforeDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                        android:layout_weight="1" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="136dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shouye_292" >

                            <LinearLayout
                                android:id="@+id/mLinear_first"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tv_title_first"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="欢乐斗地主"
                                    android:textColor="@color/gh_shenhui_color"
                                    android:textSize="16.0sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/shouye_111" />

                                <TextView
                                    android:id="@+id/tv_type_first"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="3246"
                                    android:textColor="@color/gh_yellow_color"
                                    android:textSize="16.0sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="11dp" >

                            <RelativeLayout
                                android:id="@+id/timg_first"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/shouye_1560" >

                                <com.game.helper.view.widget.CircleImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/imageView_pic_first"
                                    android:layout_width="46dp"
                                    android:layout_height="46dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/pic_moren"
                                    app:civ_border_color="@color/white"
                                    app:civ_border_width="2dp" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/shouye_71" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:id="@+id/re_third"
                        android:visibility="invisible"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="127dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shouye_294" >

                            <LinearLayout
                                android:id="@+id/mLinear_third"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tv_title_third"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="欢乐斗地主"
                                    android:textColor="@color/gh_shenhui_color"
                                    android:textSize="16.0sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/shouye_111" />

                                <TextView
                                    android:id="@+id/tv_type_third"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="3246"
                                    android:textColor="@color/gh_yellow_color"
                                    android:textSize="16.0sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50dp" >

                            <RelativeLayout
                                android:id="@+id/timg_third"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/shouye_1560" >

                                <com.game.helper.view.widget.CircleImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/imageView_pic_third"
                                    android:layout_width="46dp"
                                    android:layout_height="46dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/pic_moren"
                                    app:civ_border_color="@color/white"
                                    app:civ_border_width="2dp" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/shouye_73" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.game.helper.view.widget.ListViewForScrollView
                android:id="@+id/listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:cacheColorHint="#ffffffff"
                android:divider="@null"
                android:gravity="center"
                android:scrollbars="none" >
            </com.game.helper.view.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>