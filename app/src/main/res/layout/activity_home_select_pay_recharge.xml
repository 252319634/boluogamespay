            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:src="@drawable/recharge_game" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="游戏"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_payselect_gamename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:gravity="right"
                android:text="xxx"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/pay_recharge_account_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_44DP"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:src="@drawable/recharge_account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="账号"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_payselect_gameid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:gravity="right"
                android:text="xxx"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_44DP"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:src="@drawable/recharge_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="金额"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_payselect_formermoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:gravity="right"
                android:text="xxx"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_44DP"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:src="@drawable/recharge_payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="实付"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_Money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:gravity="right"
                android:text="xxx"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/pay_recharge_client_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_44DP"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:src="@drawable/client" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="客户端"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_payselect_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:gravity="right"
                android:text="xxx"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />
        </LinearLayout>

