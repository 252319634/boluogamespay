        <View
            android:id="@+id/mView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_10DP"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_30DP"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="选择支付方式"
                android:textColor="@color/gh_qianhui_color"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/relat_weixin"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/mImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/tencent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/mImageView1"
                android:layout_toRightOf="@+id/mImageView1"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_select0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/checked_mult" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/relat_alipay"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:background="@drawable/public_selector">

            <ImageView
                android:id="@+id/mImageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/alipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mImageView2"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_select1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/checked_mult" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/mLinearPtb"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/gold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="金币"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_Ptb"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_select11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/checked_mult" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_0.5DP"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50DP"
            android:background="@color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/light_blue"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_ensure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@drawable/nav_background"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>