<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gh_white_to_bgcolor_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.game.helper.view.widget.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_item"
                android:layout_marginLeft="10dp"
                android:layout_width="38.0dip"
                android:layout_height="38.0dip"
                android:src="@drawable/pic_moren" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="王者巅峰"
                    android:textColor="@color/light_blue"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="2016-08-24 17:16"
                    android:textColor="@color/gh_shenhui_color"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/gameNmae"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="游戏名称游戏名称"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/money"
             android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="消费金额"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/add"
             android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="+2016"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="12.0sp" />
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gh_qianhui_color" />


</LinearLayout>