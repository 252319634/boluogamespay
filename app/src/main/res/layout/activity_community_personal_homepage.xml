<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical">

    <!-- 头部导航 -->
    <!--
        <include
            android:id="@+id/include"
            layout="@layout/top_layout_higher" />-->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_background">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_30DP">

                    <ImageView
                        android:id="@+id/personal_back"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/shouye_03" />

                    <TextView
                        android:id="@+id/personal_setname"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/DIMEN_10DP"
                        android:scaleType="centerInside"
                        android:text="备注" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personal_icon_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/DIMEN_50DP"
                    android:layout_gravity="center_horizontal">

                    <com.game.helper.view.widget.CircleImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_moren" />

                    <ImageView
                        android:id="@+id/personal_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/DIMEN_80DP"
                        android:src="@drawable/vip_one" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_nikename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/DIMEN_10DP"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_below="@id/personal_icon_rl"
                    />

                <TextView
                    android:id="@+id/tv_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nikename"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/tv_item"
                    android:layout_marginTop="@dimen/DIMEN_10DP"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mLayout1"
                        android:layout_width="0dp"
                        android:paddingTop="@dimen/DIMEN_10DP"
                        android:paddingBottom="@dimen/DIMEN_10DP"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent_while"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:id="@+id/weddingsNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/DIMEN_5DP"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mLayout2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/DIMEN_2DP"
                        android:background="@color/transparent_while"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="粉丝"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/collect_Num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/DIMEN_5DP"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mLayout3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent_while"
                        android:layout_marginLeft="@dimen/DIMEN_2DP"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="礼物"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/gift_Num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/DIMEN_5DP"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_40DP"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/other_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="照片墙"
                        android:textColor="@color/gh_shenhui_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 个人照片 -->

            <com.game.helper.view.widget.MyScrollviewGridView
                android:id="@+id/photo_gridview"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:background="@color/white"
                android:horizontalSpacing="10.0dip"
                android:listSelector="@null"
                android:numColumns="4"
                android:layout_marginTop="@dimen/DIMEN_5DP"
                android:paddingBottom="@dimen/DIMEN_10DP"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0dip" />

