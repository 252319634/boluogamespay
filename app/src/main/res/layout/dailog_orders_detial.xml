<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_dailog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30DP"
        android:layout_marginRight="@dimen/DIMEN_30DP"
        android:background="@drawable/shape_corners_nor1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/DIMEN_10DP"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="订单详情"
            android:textColor="#000000"
            android:textSize="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1DP"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:background="@color/gh_qianhui_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dod_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:src="@drawable/btn_choice_down" />

            <TextView
                android:id="@+id/dod_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_35DP"
                android:text="@string/pay_state"
                android:textColor="@color/gh_shenhui_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/game_order_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/dod_state_tv"
                android:layout_toRightOf="@+id/dod_state_tv"
                android:text="xx"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/game_order_ordernumber_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_35DP"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:text="订单号 : "
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/game_order_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_35DP"
            android:layout_marginTop="@dimen/DIMEN_6DP"
            android:text="充值时间 : "
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/game_order_game_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_35DP"
            android:layout_marginTop="@dimen/DIMEN_6DP"
            android:text="充值游戏 : "
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/game_order_account_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_35DP"
            android:layout_marginTop="@dimen/DIMEN_6DP"
            android:text="充值账号 : "
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/game_order_money_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_35DP"
            android:layout_marginTop="@dimen/DIMEN_6DP"
            android:text="充值金额 : "
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/game_order_paymoney_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_35DP"
            android:layout_marginTop="@dimen/DIMEN_6DP"
            android:text="实付金额 : "
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/tv_contentT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="预计费用40元"
            android:textColor="@color/red"
            android:textSize="14dp"
            android:visibility="gone" />

        <View
            android:id="@+id/msView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="#dadada" />

        <Button
            android:id="@+id/btn_single"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_bottom_two"
            android:gravity="center_horizontal"
            android:text="xx"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>