<?xml version="1.0" encoding="utf-8"?>
<!-- 性别 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFf4f4f4"
    android:orientation="vertical" >

    <!-- 头部导航 -->

    <include
        android:id="@+id/include"
        layout="@layout/top_layout_higher" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#C9C9C9" />

    <RelativeLayout
        android:id="@+id/relat_set_man"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/public_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="14sp" />

        <ImageView
                 android:id="@+id/iv_select0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:scaleType="fitXY"
                android:src="@drawable/btn_choice_down" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#C9C9C9" />

    <RelativeLayout
        android:id="@+id/relat_set_wman"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/public_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/gh_shenhui_color"
            android:textSize="14sp" />

        <ImageView
                android:id="@+id/iv_select1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_qx_g" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#C9C9C9" />

</LinearLayout>