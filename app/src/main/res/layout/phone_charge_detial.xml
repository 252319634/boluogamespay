
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_dailog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30DP"
        android:layout_marginRight="@dimen/DIMEN_30DP"
        android:background="@drawable/shape_corners_nor1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/DIMEN_10DP"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="订单详情"
            android:textColor="#000000"
            android:textSize="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1DP"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:background="@color/gh_qianhui_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40DP"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/shouye_61" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gh_shenhui_color"
                android:textColorHint="@color/gh_qianhui_color"
                android:textSize="14sp" />
        </LinearLayout>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:horizontalSpacing="10dp"
            android:scrollbars="none"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />

        <Button
            android:id="@+id/btn_single"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_bottom_two"
            android:gravity="center_horizontal"
            android:text="立即兑换"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>